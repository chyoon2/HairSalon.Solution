@{
  Layout = "_Layout";
}

@model List<Salon.Models.Client>
@using Salon.Models

<h1>Clients:</h1>
<br>
@if (Model.Count == 0)
{
  <p>No Clients have been added</p>
}
<ol>
@foreach (Client client in Model)
{
  <li><h4>@Html.ActionLink($"{@client.Name}", "Show", new{id = client.ClientId}) | @client.Stylist.Name</h4></li>
}
