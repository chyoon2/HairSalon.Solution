@{
  Layout = "_Layout";
}

@model List<HairSalon.Models.Client>
@using HairSalon.Models

<h1>Clients:</h1>
<br>
@if (Model.Count == 0)
{
  <p>No Clients have been added</p>
}
<ul>
@foreach (Client client in Model)
{
  <li><h4>@Html.ActionLink($"{@client.Name}", "Show", new{id = client.ClientId}) | @client.Stylist.Name</h4></li>
}
</ul>

<p>@Html.ActionLink("Add a Client", "Create") || @Html.ActionLink("Home", "Index", "Home")</p>
