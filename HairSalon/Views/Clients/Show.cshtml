@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<h1>Client Details:</h1>

<h4>@Html.DisplayFor(model => model.Name)</h4>
<h4>@Html.DisplayFor(model => model.Phone)</h4>
<h4>@Html.DisplayFor(model => model.MemberSince)</h4>
<h4>@Html.DisplayNameFor(model => model.Stylist): @Html.ActionLink($"{Model.Stylist.Name}", "Show", "Stylists", new{id = Model.StylistId})</h4>

<div class="bottom">
<p>@Html.ActionLink("Delete this Client","Delete", new {id = Model.ClientId})
|| @Html.ActionLink("Back to Clients", "Index") ||
@Html.ActionLink("Home", "Index", "Home") ||
@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</p>
</div>