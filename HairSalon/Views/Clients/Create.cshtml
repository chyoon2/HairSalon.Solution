@{
  Layout = "_Layout";
}
@model Salon.Models.Client

<h1>Add new Client</h1>
<br>
@using (Html.BeginForm())
{
  <div class ="form-group">
  <h4>@Html.LabelFor(model => model.Name)</h4>
  @Html.TextBoxFor(model => model.Name, new{ @class = "form-control"})
  
  <h4>@Html.LabelFor(model => model.Phone)</h4>
  @Html.TextBoxFor(model => model.Phone, new{ @class = "form-control"})

  <h4>@Html.LabelFor(model => model.MemberSince)</h4>
  @Html.TextBoxFor(model => model.MemberSince, new{ @class = "form-control"})

  <h4>Stylist</h4>@Html.DropDownList("StylistId")
  <input type="submit" value="Add new Stylist" class="btn btn-default" />
  </div>
}
<div class="bottom">
<p>@Html.ActionLink("Back to all clients", "Index")</p>
