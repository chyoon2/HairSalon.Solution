@{
  Layout = "_Layout";
}
@using Salon.Models;
@model List<Salon.Models.Stylist>;
<h1>Stylists</h1>
@if (@Model.Count == 0)
{
  <h4>There are no Stylists</h4>
}
<ul>
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Show", new { id = stylist.StylistId})</li>
}
</ul>
<div class="bottom">
<p>@Html.ActionLink("Add a stylist", "Create") ||
@Html.ActionLink("Home", "Index", "Home")</p>
</div>

